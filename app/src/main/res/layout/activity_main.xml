<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mavsforlife.victor.mylab.main.MainActivity">

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friend_circle"
        android:gravity="center"
        android:padding="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_to_friend_circle"
        android:gravity="center"
        android:padding="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_translate_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试飞入"
        android:padding="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_translate_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试飞出"
        android:padding="@dimen/dp_10"/>

    <LinearLayout
        android:id="@+id/ll_target"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:visibility="gone">

    </LinearLayout>
</LinearLayout>
